<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>matrix-servlet</servlet-name>
        <servlet-class>eu.monnetproject.gelato.demo.MatrixServletApp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gelato-demo</servlet-name>
        <servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
        <init-param>
            <param-name>application</param-name>
            <param-value>eu.monnetproject.gelato.demo.GelatoDemoApp</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>matrix-servlet</servlet-name>
        <url-pattern>/matrix/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gelato-demo</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
